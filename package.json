{
  "name": "@code-ts/monorepo",
  "type": "module",
  "version": "0.0.2",
  "private": true,
  "packageManager": "pnpm@9.7.1",
  "scripts": {
    "build": "turbo run build --filter=\"./packages/*\"",
    "coverage": "vitest --coverage",
    "dev": "npm run --filter=\"./packages/*\" --parallel dev",
    "lint": "eslint .",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:version release:publish",
    "release:check": "run-s lint typecheck test",
    "release:publish": "pnpm -r publish --access public",
    "release:version": "bumpp -r",
    "test": "vitest",
    "typecheck": "vitest --typecheck"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^3.0.0-beta.2",
    "@ntnyq/prettier-config": "^1.21.2",
    "@types/node": "^22.4.0",
    "@vitest/coverage-v8": "^2.0.5",
    "bumpp": "^9.5.1",
    "eslint": "^9.9.0",
    "husky": "^9.1.4",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^6.2.2",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "tsx": "^4.17.0",
    "turbo": "^2.0.14",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "prettier": "@ntnyq/prettier-config",
  "nano-staged": {
    "*.{js,ts,mjs,cjs,json,md,yml,yaml}": "eslint --fix"
  }
}
