{
  "name": "@code-ts/monorepo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@8.6.1",
  "scripts": {
    "build": "turbo run build --filter=\"./packages/*\"",
    "coverage": "vitest --coverage",
    "dev": "npm run --filter=\"./packages/*\" --parallel dev",
    "lint": "ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs .",
    "prepare": "husky install",
    "release": "bumpp && pnpm publish",
    "test": "vitest",
    "typecheck": "vitest typecheck"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "2.0.0-beta.10",
    "@ntnyq/prettier-config": "^1.9.0",
    "@types/node": "^20.2.5",
    "@vitest/coverage-c8": "^0.31.4",
    "bumpp": "^9.1.1",
    "eslint": "^8.42.0",
    "eslint-define-config": "^1.20.0",
    "fast-glob": "^3.2.12",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "prettier": "^2.8.8",
    "tsup": "^6.7.0",
    "tsx": "^3.12.7",
    "turbo": "^1.10.1",
    "typescript": "^5.1.3",
    "vitest": "^0.31.4"
  },
  "prettier": "@ntnyq/prettier-config",
  "nano-staged": {
    "*.{js,ts,mjs,cjs,json,md,yml,yaml}": "pnpm run lint --fix"
  }
}
