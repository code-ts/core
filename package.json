{
  "name": "@code-ts/monorepo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@8.8.0",
  "scripts": {
    "build": "turbo run build --filter=\"./packages/*\"",
    "coverage": "vitest --coverage",
    "dev": "npm run --filter=\"./packages/*\" --parallel dev",
    "lint": "ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs .",
    "prepare": "husky install",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:version release:publish",
    "release:check": "run-s lint typecheck test",
    "release:publish": "pnpm -r publish --access public",
    "release:version": "bumpp -r",
    "test": "vitest",
    "typecheck": "vitest typecheck"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "2.0.0-beta.20",
    "@ntnyq/prettier-config": "^1.14.0",
    "@types/node": "^20.7.1",
    "@vitest/coverage-v8": "^0.34.5",
    "bumpp": "^9.2.0",
    "eslint": "^8.50.0",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "tsup": "^7.2.0",
    "tsx": "^3.13.0",
    "turbo": "^1.10.14",
    "typescript": "^5.2.2",
    "vitest": "^0.34.5"
  },
  "prettier": "@ntnyq/prettier-config",
  "nano-staged": {
    "*.{js,ts,mjs,cjs,json,md,yml,yaml}": "pnpm run lint --fix"
  }
}
