{
  "name": "@code-ts/monorepo",
  "type": "module",
  "version": "0.0.3",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "build": "turbo run build --filter=\"./packages/*\"",
    "dev": "npm run --filter=\"./packages/*\" --parallel dev",
    "lint": "eslint",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:version",
    "release:check": "run-s lint typecheck test",
    "release:version": "bumpp -r",
    "test": "vitest",
    "typecheck": "tsgo --noEmit"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^5.9.0",
    "@ntnyq/prettier-config": "^3.0.1",
    "@types/node": "^25.0.8",
    "@typescript/native-preview": "^7.0.0-dev.20260114.1",
    "bumpp": "^10.4.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "nano-staged": "^0.9.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.8.0",
    "tsdown": "0.20.0-beta.3",
    "tsx": "^4.21.0",
    "turbo": "^2.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,md,yml,yaml,json}": "eslint --fix"
  }
}
